{
  "manifest_version": 3,
  "name": "RugGuard - Crypto Scam Detector",
  "version": "1.0.0",
  "description": "AI-powered smart contract scam detector. Protect yourself from cryptocurrency rug pulls.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://localhost:5000/*"
  ]
}